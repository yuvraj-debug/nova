# Example .env for Nova (do NOT commit secrets here)
# Copy this file to .env and fill with your own keys locally.

# Groq API Configuration
GROQ_API_KEY=

# Model Configuration
GROQ_MODEL=llama-3.1-8b-instant

# Chat Configuration
TEMPERATURE=0.7
MAX_TOKENS=200
TOP_P=1
LONG_MAX_TOKENS=800

# Default Behavior
DEFAULT_MODE=control
SPEECH_ENABLED=true
ENABLE_SYSTEM_CONTROL=true
UNATTENDED_CONTROL=true

# Wake Word
WAKE_WORD_ENABLED=true
WAKE_WORD=nova

# Voice
SPEECH_RATE=2
SPEECH_VOLUME=100
LANGUAGE=en
VOICE_NAME=

# Memory
MEMORY_SIZE=10
SAVE_MEMORY=true

# Optional Google Search
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Post-open focus behavior
# When true, Nova will press Alt+Tab after opening apps to background them.
# Default is false to keep the opened app in the foreground.
AUTO_ALT_TAB_AFTER_OPEN=false
# If true, Nova will attempt to return focus to its floating window after OPEN completes
AUTO_RETURN_FOCUS_AFTER_OPEN=true
